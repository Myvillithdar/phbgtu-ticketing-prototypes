@model phbgtu_ticketing_prototypes.Models.Ticket
@{
    ViewData["Title"] = "PurchaseEdit";
}
<h2>PurchaseEdit</h2>
<form asp-action="PurchaseEdit">
    <div class="form-horizontal">
        <h4>Ticket</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <input type="hidden" asp-for="TicketID" />
        <input type="hidden" asp-for="EventTicketID" />
        <input type="hidden" asp-for="UserAccountID" />
        <input type="hidden" asp-for="TicketStatusID" />
        <input type="hidden" asp-for="AmountPaid" />
        <input type="hidden" asp-for="DateSold" />
        <input type="hidden" asp-for="TicketNumber" />


        <<!--
             
         They need to be able to change the CustomFormFieldResponse
             In order to do this, we need to pull in CustomFormFieldDataOption, CustomFormFieldDataType?
             
             -->

        
            
        <div class="form-group">
            <label asp-for="AttendeeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AttendeeName" class="form-control" />
                <span asp-validation-for="AttendeeName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
