@model phbgtu_ticketing_prototypes.Models.CustomFormFieldQuestion

@{
    ViewData["Title"] = "Create";
}

<h2><span class="fa fa-plus"></span> Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>CustomFormFieldQuestion</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TicketDesignID" class="col-md-2 control-label">Event Name</label>
            <div class="col-md-10">
                <select asp-for="TicketDesignID" class="form-control" asp-items="ViewBag.TicketDesignID"></select>
                <span asp-validation-for="TicketDesignID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FormFieldLabel" class="col-md-2 control-label">Field Label</label>
            <div class="col-md-10">
                <input asp-for="FormFieldLabel" class="form-control" />
                <span asp-validation-for="FormFieldLabel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FormFieldDatatypeID" class="col-md-2 control-label">Field Type</label>
            <div class="col-md-10">
                <select asp-for="FormFieldDatatypeID" class ="form-control" asp-items="ViewBag.FormFieldDatatypeID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="FormFieldRequired" />
                    <script type="text/javascript">
                        $("input[name=FormFieldRequired]").prop("checked", true);
                    </script>
                    <label asp-for="FormFieldRequired">Response Required</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@if (Model != null)
{
    <script type="text/javascript">
        var eventTicketID = $("#TicketDesignID");
        $(eventTicketID).val(@Model.TicketDesignID);
        // eventTicketID.children("[value=@Model.TicketDesignID]").prop("selected", true);
        eventTicketID.prop("readonly", true);
    </script>
}